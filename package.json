{
  "name": "unified-metadata-toolkit",
  "version": "1.5.0",
  "description": "A toolkit for fixing and editing photo/video metadata.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "maybetoasty",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  },
  "build": {
    "appId": "com.maybetoasty.metadatatoolkit",
    "productName": "Metadata Toolkit",
    "copyright": "Copyright Â© 2025 maybetoasty",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js"
    ],
    "extraResources": [
      "assets/**"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
